<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kuafoo"
        xmlns:Controls="clr-namespace:Kuafoo.Views.Shared.Controls" x:Class="Kuafoo.MainWindow"
        mc:Ignorable="d"
        Title="夸父平台" Height="450" Width="800"
        Closing="Window_Closing">
    <Window.Resources>
        <ContextMenu x:Key="cmListView">
            <MenuItem Name="lsvItemOpen" Header="打开" Click="lsvItemOpen_Click"/>
            <Separator></Separator>
            <MenuItem Name="lsvItemClose" Header="关闭" Click="lsvItemClose_Click" />
        </ContextMenu>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="*" />
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid x:Name="gdTop" Grid.Row="0">
            <StackPanel>
                <TabControl x:Name="tbMenu" Panel.ZIndex="1" Style="{StaticResource MenuTab}">
                    <TabItem x:Name="tbMenu_File" Header="文件">
                        <WrapPanel>
                            <Button x:Name="tbMenu_File_Open" Content="打开" Click="tbMenu_File_Open_Click" Style="{StaticResource MenuButton}" />
                            <Button x:Name="tbMenu_File_Save" Content="保存" Style="{StaticResource MenuButton}" />
                            <Button x:Name="tbMenu_File_Scal1_1" Content="等比显示" Click="tbMenu_File_Scal1_1_Click" Style="{StaticResource MenuButton}" />
                        </WrapPanel>
                    </TabItem>
                    <TabItem x:Name="tbMenu_Edit" Header="编辑">
                        <WrapPanel>

                        </WrapPanel>
                    </TabItem>
                    <TabItem x:Name="tbMenu_Filters" Header="滤波器"/>
                    <TabItem x:Name="tbMenu_Quality" Header="质量提升" />
                    <TabItem x:Name="tbMenu_DetectionAndTracking" Header="检测/跟踪" />
                    <TabItem x:Name="tbMenu_3D" Header="三维重建" />
                    <TabItem x:Name="tbMenu_Parallel" Header="并行计算">
                        <WrapPanel>
                            <Button Content="盘古计算" x:Name="btnPanguos"  Style="{StaticResource MenuButton}" />
                        </WrapPanel>
                    </TabItem>
                    <TabItem x:Name="tbMenu_Tools" Header="常用工具">
                        <WrapPanel>
                            <Button Content="视频转图片" x:Name="tbMenu_Tools_V2F" Click="tbMenu_Tools_V2F_Click"  Style="{StaticResource MenuButton}" />
                            <Button Content="图片质量" x:Name="tbMenu_Tools_Standard" Click="tbMenu_Tools_Standard_Click" Style="{StaticResource MenuButton}" />
                        </WrapPanel>
                    </TabItem>
                    <TabItem x:Name="tbMenu_About" Header="关于软件">
                        <WrapPanel>
                            <Button x:Name="btnAbout" Content="关于" Click="btnAbout_Click" Style="{StaticResource MenuButton}" />
                        </WrapPanel>
                    </TabItem>
                </TabControl>
            </StackPanel>
        </Grid>
        <Grid x:Name="gdMiddle" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <ListBox x:Name="lsvFiles" SelectionChanged="lsvFiles_SelectionChanged" ContextMenu="{StaticResource cmListView}">
                </ListBox>
            </Grid>
            <Grid Grid.Column="1">
                <StackPanel>
                    <Controls:UcImageViewer x:Name="imgViewer" />
                </StackPanel>
            </Grid>
        </Grid>
        <Grid x:Name="gdBottom" Grid.Row="2">
            <Label x:Name="labMessage" />
        </Grid>
    </Grid>
</Window>
